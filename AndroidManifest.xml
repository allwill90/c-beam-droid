<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="org.c_base.c_beam"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="14"
        android:targetSdkVersion="16" />

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name="org.c_base.c_beam.MainActivity"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="org.c_base.c_beam.UserActivity"
            android:label="@string/title_activity_user"
            android:parentActivityName="org.c_base.c_beam.MainActivity" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="org.c_base.c_beam.MainActivity" />

            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="org.c_base.c_beam.EventActivity"
            android:label="@string/title_activity_event"
            android:parentActivityName="org.c_base.c_beam.MainActivity" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="org.c_base.c_beam.MainActivity" />
        </activity>
        <activity
            android:name="org.c_base.c_beam.MissionActivity"
            android:label="@string/title_activity_mission"
            android:parentActivityName="org.c_base.c_beam.MainActivity" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="org.c_base.c_beam.MainActivity" />
        </activity>
    </application>

</manifest>