<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="match_parent">

    <RelativeLayout
            android:layout_width="fill_parent"
            android:layout_height="200dp"
            android:background="@color/black_overlay"
            android:visibility="visible"
            android:focusable="false">

        <ImageView
                android:layout_width="50dip"
                android:layout_height="50dip"
                android:id="@+id/imageView"
                android:src="@drawable/ring_clamp"
                android:scaleType="fitCenter"
                android:background="@drawable/button_32x32_gray"/>

        <HorizontalScrollView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/horizontalScrollView"
                android:layout_alignParentBottom="true"
                android:layout_alignParentRight="true"
                android:layout_alignParentLeft="true">

            <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent">

                <Button
                        android:layout_width="wrap_content"
                        android:layout_height="32dp"
                        android:text="foo"
                        android:id="@+id/button"
                        android:background="@drawable/button"/>

                <Button
                        android:layout_width="wrap_content"
                        android:layout_height="32dp"
                        android:text="New Button"
                        android:id="@+id/button2"
                        android:background="@drawable/button"/>

                <Button
                        android:layout_width="wrap_content"
                        android:layout_height="32dp"
                        android:text="New Button"
                        android:id="@+id/button3"
                        android:background="@drawable/button"/>

                <Button
                        android:layout_width="wrap_content"
                        android:layout_height="32dp"
                        android:text="New Button"
                        android:id="@+id/button4"
                        android:background="@drawable/button"/>

                <Button
                        android:layout_width="wrap_content"
                        android:layout_height="32dp"
                        android:text="New Button"
                        android:id="@+id/button5"
                        android:background="@drawable/button"/>
            </LinearLayout>
        </HorizontalScrollView>

        <ScrollView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/scrollView2"
                android:layout_alignParentRight="true"
                android:layout_toRightOf="@+id/imageView"
                android:layout_alignTop="@+id/imageView"
                android:layout_above="@+id/horizontalScrollView"
                android:paddingBottom="4dp">

            <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/info_com"
                    android:id="@+id/textView"
                    android:textSize="20dp"
                    android:typeface="monospace"
                    android:textColor="#ff33b6f6"
                    android:paddingLeft="4dp"/>
        </ScrollView>

    </RelativeLayout>

    <ScrollView
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:id="@+id/scrollView"
            android:layout_alignParentLeft="true"
            android:layout_below="@+id/ap_area"
            android:layout_above="@+id/main_buttons"
            android:visibility="visible">

        <LinearLayout
                android:orientation="vertical"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:layout_below="@+id/ap_area"
                android:layout_above="@+id/main_buttons">


            <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content">

                <ImageButton
                        android:layout_width="50dip"
                        android:layout_height="50dip"
                        android:id="@+id/button_clamp"
                        android:src="@drawable/ring_clamp"
                        android:scaleType="fitCenter"
                        android:background="@drawable/button"/>

                <Button
                        android:layout_width="fill_parent"
                        android:layout_height="fill_parent"
                        android:text="@string/button_clamp"
                        android:id="@+id/button7"
                        android:background="@drawable/button"
                        android:typeface="monospace"
                        android:textColor="#ff33b6f6"
                        android:textSize="24dp"/>

            </LinearLayout>

            <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content">

                <ImageButton
                        android:layout_width="50dip"
                        android:layout_height="50dip"
                        android:id="@+id/button_carbon"
                        android:src="@drawable/ring_carbon"
                        android:scaleType="fitCenter"
                        android:background="@drawable/button"
                        />

                <Button
                        android:layout_width="fill_parent"
                        android:layout_height="fill_parent"
                        android:text="@string/button_carbon"
                        android:id="@+id/button6"
                        android:background="@drawable/button"
                        android:typeface="monospace"
                        android:textSize="24dp"
                        android:textColor="#ff33b6f6"/>

            </LinearLayout>

            <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content">

                <ImageButton
                        android:layout_width="50dip"
                        android:layout_height="50dip"
                        android:id="@+id/button_cience"
                        android:src="@drawable/ring_cience"
                        android:scaleType="fitCenter"
                        android:background="@drawable/button"
                        />

                <Button
                        android:layout_width="fill_parent"
                        android:layout_height="fill_parent"
                        android:text="@string/button_cience"
                        android:id="@+id/button8"
                        android:typeface="monospace"
                        android:textColor="#ff33b6f6"
                        android:textSize="24dp"
                        android:background="@drawable/button"/>

            </LinearLayout>

            <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content">

                <ImageButton
                        android:layout_width="50dip"
                        android:layout_height="50dip"
                        android:id="@+id/button_creactiv"
                        android:src="@drawable/ring_creactiv"
                        android:scaleType="fitCenter"
                        android:background="@drawable/button"
                        />

                <Button
                        android:layout_width="fill_parent"
                        android:layout_height="fill_parent"
                        android:text="@string/button_creactiv"
                        android:id="@+id/button9"
                        android:textSize="24dp"
                        android:textColor="#ff33b6f6"
                        android:typeface="monospace"
                        android:background="@drawable/button"/>

            </LinearLayout>

            <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content">

                <ImageButton
                        android:layout_width="50dip"
                        android:layout_height="50dip"
                        android:id="@+id/button_culture"
                        android:src="@drawable/ring_culture"
                        android:scaleType="fitCenter"
                        android:background="@drawable/button"
                        />

                <Button
                        android:layout_width="fill_parent"
                        android:layout_height="fill_parent"
                        android:text="@string/button_culture"
                        android:id="@+id/button10"
                        android:textColor="#ff33b6f6"
                        android:textSize="24dp"
                        android:typeface="monospace"
                        android:background="@drawable/button"/>

            </LinearLayout>

            <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="left|center_vertical">

                <ImageButton
                        android:layout_width="50dip"
                        android:layout_height="50dip"
                        android:id="@+id/button_com"
                        android:src="@drawable/ring_com"
                        android:scaleType="fitCenter"
                        android:background="@drawable/button"/>

                <Button
                        android:layout_width="fill_parent"
                        android:layout_height="fill_parent"
                        android:text="@string/button_com"
                        android:id="@+id/button11"
                        android:typeface="monospace"
                        android:textSize="24dp"
                        android:textColor="#ff33b6f6"
                        android:background="@drawable/button"/>

            </LinearLayout>

            <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content">

                <ImageButton
                        android:layout_width="50dip"
                        android:layout_height="50dip"
                        android:id="@+id/button_core"
                        android:src="@drawable/ring_core"
                        android:scaleType="fitCenter"
                        android:background="@drawable/button"
                        />

                <Button
                        android:layout_width="fill_parent"
                        android:layout_height="fill_parent"
                        android:text="@string/button_core"
                        android:id="@+id/button12"
                        android:textColor="#ff33b6f6"
                        android:textSize="24dp"
                        android:typeface="monospace"
                        android:background="@drawable/button"/>

            </LinearLayout>

        </LinearLayout>
    </ScrollView>

</LinearLayout>