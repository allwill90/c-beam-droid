<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res/org.c_base.c_beam"
    android:id="@+id/RelativeLayout1"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <ScrollView
        android:id="@+id/scrollView1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" >

        <RelativeLayout
            xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:app="http://schemas.android.com/apk/res/org.c_base.c_beam"
            android:id="@+id/RelativeLayout2"
            android:layout_width="match_parent"
            android:layout_height="match_parent" >

            <ToggleButton
                android:id="@+id/toggleButton1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_alignParentRight="true"
                android:layout_below="@+id/button_self_destruct"
                android:text="Antenne"
                android:textOff="Antenne aus"
                android:textOn="Antenne an" />

            <Button
                android:id="@+id/button_liftoff"
                style="?android:attr/buttonStyleSmall"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_alignParentRight="true"
                android:layout_alignParentTop="true"
                android:text="Abheben" />

            <Button
                android:id="@+id/button_self_destruct"
                style="?android:attr/buttonStyleSmall"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_below="@+id/button_liftoff"
                android:layout_toLeftOf="@+id/button_reject_from_earth"
                android:text="Erde absprengen" />

            <ToggleButton
                android:id="@+id/toggleButtonBluewall"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_below="@+id/toggleButton1"
                android:layout_toRightOf="@+id/button_softwareverbrennung"
                android:text="ToggleButton"
                android:textOff="Darkwall"
                android:textOn="Bluewall" />

            <Button
                android:id="@+id/button_unlabeled"
                style="?android:attr/buttonStyleSmall"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_alignParentRight="true"
                android:layout_below="@+id/button_softwareverbrennung" />

            <android.support.v7.widget.GridLayout
                android:id="@+id/gridLayout1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/button_unlabeled"
                android:layout_centerHorizontal="true"
                app:columnCount="2"
                app:rowCount="3" >
            </android.support.v7.widget.GridLayout>

            <Button
                android:id="@+id/button_reject_from_earth"
                style="?android:attr/buttonStyleSmall"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBaseline="@+id/button_self_destruct"
                android:layout_alignBottom="@+id/button_self_destruct"
                android:layout_alignParentRight="true"
                android:text="von Erde abstossen" />

            <Button
                android:id="@+id/button_softwareverbrennung"
                style="?android:attr/buttonStyleSmall"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBaseline="@+id/toggleButtonBluewall"
                android:layout_alignBottom="@+id/toggleButtonBluewall"
                android:layout_alignParentLeft="true"
                android:text="Software-Endlager" />

            <TableLayout
                android:id="@+id/tableLayout2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/button_unlabeled"
                android:layout_centerHorizontal="true"
                android:gravity="center_horizontal" >

                <TextView
                    android:id="@+id/textView1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="4dp"
                    android:text="c_leusen-LED pattern:" />

                <TableRow
                    android:id="@+id/tableRow5"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" >

                    <Button
                        android:id="@+id/button1"
                        style="?android:attr/buttonStyleSmall"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        app:layout_column="0"
                        app:layout_gravity="left"
                        app:layout_row="0"
                        android:minWidth="66dip"
                        android:text="OFF" />

                    <Button
                        android:id="@+id/button2"
                        style="?android:attr/buttonStyleSmall"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        app:layout_column="1"
                        app:layout_gravity="left"
                        app:layout_row="0"
                        android:minWidth="86dp"
                        android:text="Rainbow" />

                    <Button
                        android:id="@+id/button3"
                        style="?android:attr/buttonStyleSmall"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        app:layout_column="2"
                        app:layout_columnSpan="2"
                        app:layout_gravity="left"
                        app:layout_row="0"
                        android:text="Gru:n" />
                </TableRow>

                <TableRow
                    android:id="@+id/tableRow6"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" >

                    <Button
                        android:id="@+id/button4"
                        style="?android:attr/buttonStyleSmall"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        app:layout_column="4"
                        app:layout_gravity="left"
                        app:layout_row="0"
                        android:text="Blaugru:n" />

                    <Button
                        android:id="@+id/button5"
                        style="?android:attr/buttonStyleSmall"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        app:layout_column="0"
                        app:layout_gravity="left|bottom"
                        app:layout_row="1"
                        android:minWidth="66dip"
                        android:text="Rot" />

                    <Button
                        android:id="@+id/button6"
                        style="?android:attr/buttonStyleSmall"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        app:layout_column="1"
                        app:layout_gravity="left"
                        app:layout_row="1"
                        android:text="Rainbow2" />
                </TableRow>

                <TableRow
                    android:id="@+id/tableRow7"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" >

                    <Button
                        android:id="@+id/button7"
                        style="?android:attr/buttonStyleSmall"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        app:layout_column="1"
                        app:layout_gravity="left"
                        app:layout_row="1"
                        android:text="Weiss" />

                    <Button
                        android:id="@+id/button13"
                        style="?android:attr/buttonStyleSmall"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Default" />

                    <Button
                        android:id="@+id/button14"
                        style="?android:attr/buttonStyleSmall"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Notbeleuchtung" />

                </TableRow>
            </TableLayout>

            <TableLayout
                android:id="@+id/TableLayout3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_alignParentLeft="true"
                android:layout_alignParentRight="true"
                android:layout_below="@id/tableLayout2"
                android:layout_centerHorizontal="true" >

                <TableRow
                    android:id="@+id/tableRow1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center_horizontal" >

                    <Button
                        android:id="@+id/button12"
                        style="?android:attr/buttonStyleSmall"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        app:layout_column="3"
                        app:layout_columnSpan="2"
                        app:layout_gravity="left"
                        app:layout_row="2"
                        android:text="-6" />

                    <Button
                        android:id="@+id/button11"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        app:layout_column="2"
                        app:layout_columnSpan="2"
                        app:layout_gravity="left"
                        app:layout_row="2"
                        android:minWidth="48dp"
                        android:text="-3" />

                    <Button
                        android:id="@+id/button10"
                        style="?android:attr/buttonStyleSmall"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        app:layout_column="1"
                        app:layout_gravity="left"
                        app:layout_row="2"
                        android:text="0" />

                    <Button
                        android:id="@+id/button9"
                        style="?android:attr/buttonStyleSmall"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        app:layout_column="0"
                        app:layout_gravity="left"
                        app:layout_row="2"
                        android:text="+3" />

                    <Button
                        android:id="@+id/button8"
                        style="?android:attr/buttonStyleSmall"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        app:layout_column="3"
                        app:layout_gravity="left"
                        app:layout_row="1"
                        android:text="+6" />
                </TableRow>

                <TableRow
                    android:id="@+id/tableRow2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" >
                </TableRow>

                <TableRow
                    android:id="@+id/tableRow3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" >
                </TableRow>
            </TableLayout>
        </RelativeLayout>
    </ScrollView>

</RelativeLayout>